{
	"name": "AdThwart",
	"version": "0.9.25",
	"description": "__MSG_description__",
	"default_locale": "en",
	"page_action": {
		"default icon": "icons/face-devilish-19.png",
		"default title": "AdThwart",
		"popup": "popup.html"
	},
	"icons": {
		"16": "icons/face-devilish-16.png",
		"32": "icons/face-devilish-32.png",
		"48": "icons/face-devilish-48.png",
		"128": "icons/face-devilish-128.png"
	},
	"permissions": [
		"tabs", "http://*/*", "https://*/*"
	],
	"background_page": "background.html",
	"options_page": "options.html",
	"content_scripts": [
	{
 		"matches": ["http://*/*", "https://*/*"],
		"js": ["initial-block.js"],
		"run_at": "document_start",
		"all_frames": true
	},
 	{
 		"matches": ["http://*/*", "https://*/*"],
 		"js": ["blocker.js", "disabletextads.js"],
 		"run_at": "document_end",
 		"all_frames": true
 	}
	]
}
